<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @articulo.name %>
</p>

<p>
  <strong>User:</strong>
  <%= @articulo.user_id %>
</p>

<p>
  <strong>Stock:</strong>
  <%= @articulo.stock %>
</p>

<p>
  <strong>Precio:</strong>
  <%= @articulo.precio %>
</p>

<p>
  <strong>Descripcion:</strong>
  <%= @articulo.descripcion %>
</p>
<span class="timestamp">
  Publicado hace <%= time_ago_in_words(@articulo.created_at) %> .
</span>
<% if logged_in?%>
  <%= form_for @cart do |f| %>
    <%= flash[:danger] %>
    <%= f.hidden_field :cantidad, value: 1 %>
    <%= f.hidden_field :articulo_id, value: @articulo.id %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.submit 'Agregar al carro' %>
    <%= link_to "Ver Carro", user_path%>
  <% end %>
  <% if current_user.admin?%>
    <%= link_to 'Edit', edit_articulo_path(@articulo) %>
  <% end %>
<% end %>
