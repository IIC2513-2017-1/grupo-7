<% if logged_in?%>
<% if current_user.admin?%>
  <%= form_for(@articulo) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :precio %>
      <%= f.number_field :precio %>
    </div>
    <div class="field">
      <%= f.label :stock %>
      <%= f.number_field :stock %>
    </div>
    <div class="field">
      <%= f.label :descripcion %>
      <%= f.text_area :descripcion, placeholder: "Agrega una descripcion..." %>
    </div>
    <%= f.submit "Post", class: "btn btn-primary" %>
  <% end %>
<% else %>
  <% controller.redirect_to root_path%>
<% end %>
<% else %>
  <% controller.redirect_to login_path%>
<% end %>
