<% provide(:title, "Home | SmartBuy") %>
<%= render 'layouts/sidebar'%>
<div class="wrapper">
  <p class='page-title'>Productos recientes</p>
  <%= render 'shared/articulos_index', categoria: ""%>
  <% if logged_in? %>
    <% if current_user.admin?%>
    <br>
      <%= link_to "Publicar Articulo", add_articulo_path %>
    <% end %>
  <% else %>
    <h2>Welcome to SmartBuy</h2>
    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
  <% end %>
</div>
