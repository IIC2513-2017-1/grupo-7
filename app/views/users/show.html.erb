<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
        <%= link_to "Publicar Articulo", create_path %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
   <% if @user.articulos.any? %>
     <h3>Articulos Publicados (<%= @user.articulos.count %>)</h3>
     <ol class="articulos">
       <%= render @articulos %>
     </ol>
   <% end %>
 </div>
</div>
